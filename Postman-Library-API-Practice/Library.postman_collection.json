		{
			"name": "Add_Book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//***** Assertions Validations - Based on Response ****** \r",
							"\r",
							"//****Tests for Status Code Validations\r",
							"\r",
							"// To convert Response Body into JSON object\r",
							"pm.collectionVariables.set(\"flag\",false);\r",
							"\r",
							"const jsonData = pm.response.json();\r",
							"\r",
							" // To convert Body into JSON format using JSON.parse feature \r",
							"var req = JSON.parse(pm.request.body.raw);\r",
							"\r",
							"\r",
							"// To parse Book ID automatically into all API requests generated through Add_Book request\r",
							"console.log(jsonData);\r",
							"const bookId = jsonData.ID;\r",
							"pm.environment.set(\"book_id\", bookId);\r",
							"\r",
							"\r",
							"function cleanupScript()\r",
							"{\r",
							"  const book_id = generateBookId(); \r",
							"  pm.environment.set(\"book_id\", book_id);\r",
							"  pm.collectionVariables.set(\"flag\",true);\r",
							"  pm.execution.setNextRequest(\"Remove_Book\");\r",
							"  //Postman.pm.execution.setNextRequest(\"Remove_Book\");\r",
							"  // Postman.setNextRequest(\"Remove_Book\");\r",
							"}\r",
							"\r",
							"function generateBookId()\r",
							"{\r",
							" const expected_id = req.isbn + req.aisle;\r",
							" return expected_id;\r",
							"\r",
							"}\r",
							"\r",
							"pm.test(\"Validate the Status Code is 200\", function () {\r",
							"\r",
							"    try {\r",
							"    // Validate Status Code is showing OK (200) response or not\r",
							"    pm.response.to.have.status(200);\r",
							"\r",
							"    // Validate JSON Body is having \"Msg\" as a property or not with the use of JSON Object\r",
							"    pm.expect(jsonData).have.property(\"Msg\");\r",
							"\r",
							"    // Validate \"Msg\" property showing with message as \"successfully added\" or not\r",
							"    pm.expect(jsonData.Msg).to.eql(\"successfully added\");\r",
							"    }\r",
							"\r",
							"    catch(e)\r",
							"    {\r",
							"      if(jsonData.Msg.includes(\"Already Exists\"))\r",
							"        {\r",
							"          cleanupScript();\r",
							"        }\r",
							"    }\r",
							"\r",
							"});\r",
							"\r",
							"//****Tests for Header & Cookies Response Time Validations\r",
							"\r",
							"pm.test(\"Headers & Cookies Response Time Validations\", function () {\r",
							"    // Validate Header type is present or not\r",
							"    pm.response.to.have.header(\"Content-Type\");\r",
							"\r",
							"    // Validate Header type's value is present or not\r",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.eql(\"application/json;charset=UTF-8\");\r",
							"\r",
							"    // Response in milliseconds\r",
							"    pm.expect(pm.response.responseTime).to.be.below(5000);\r",
							"\r",
							"    // Validate some text from Response Body in Text format\r",
							"    pm.expect(pm.response.text()).to.include(\"successfully added\");\r",
							"\r",
							"});\r",
							"\r",
							"//****Tests for Header & Cookies Response Time Validations\r",
							"\r",
							"pm.test(\"Generated Book ID Validation Logic\", function () {\r",
							"    // To store the Collection level variable value into another temp variable \r",
							"  //  const isbn_val = pm.collectionVariables.get(\"isbn\");\r",
							"\r",
							"    //To store the Request Body Aisle data into another temp variable\r",
							"   // const aisle_val = req.aisle;\r",
							"\r",
							"    // To store the final logic of Book ID into an variable \r",
							"   // const expected_id = isbn_val + aisle_val;\r",
							"\r",
							"    // To validate the Generated Book ID logic\r",
							"    const expected_id = generateBookId();\r",
							"    pm.expect(expected_id).to.eql(bookId);\r",
							"\r",
							"});\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"//RS123456 \r",
							"\r",
							"console.log(pm.globals.get(\"companyCode\"));\r",
							"const code = pm.globals.get(\"companyCode\");\r",
							"const val = pm.variables.replaceIn('{{$randomInt}}');\r",
							"pm.collectionVariables.set(\"isbn\", code + val);\r",
							"pm.collectionVariables.set(\"book_name\", pm.iterationData.get(\"Book_Name\"));\r",
							"console.log(pm.collectionVariables.get(\"book_name\"));\r",
							"pm.collectionVariables.set(\"author_name\", pm.iterationData.get(\"Book_Author\"));\r",
							"console.log(pm.collectionVariables.get(\"author_name\"));"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
