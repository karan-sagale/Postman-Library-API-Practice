		{
			"name": "Remove_Book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const removeBookSchema = {\r",
							"    \"type\": \"object\",\r",
							"    \"properties\": {\r",
							"        \"msg\": {\r",
							"            \"type\": \"string\"\r",
							"        }\r",
							"    },\r",
							"    \"required\": [\r",
							"        \"msg\"\r",
							"    ]\r",
							"};\r",
							"\r",
							"//Tests to Validate the JSON Response Status & Schema\r",
							"\r",
							"pm.test(\"Validate the JSON Response Status Code & Schema\", function () {\r",
							"    //To Validate the Status Code\r",
							"    pm.response.to.have.status(200);\r",
							"\r",
							"    //To store the response JSON into an variable\r",
							"    const jsonData = pm.response.json();\r",
							"\r",
							"    //To validate the JSON Response Msg value\r",
							"    pm.expect(jsonData.msg).to.eql(\"book is successfully deleted\");\r",
							"\r",
							"    //To Validate the JSON Schema\r",
							"    pm.response.to.have.jsonSchema(removeBookSchema);\r",
							"\r",
							"    if (pm.collectionVariables.get(\"flag\")) \r",
							"    {\r",
							"        let counter = pm.variables.get(\"loopCounter\") || 0;\r",
							"        counter++;\r",
							"        if (counter < 5) {\r",
							"        pm.variables.set(\"loopCounter\", counter);\r",
							"        \r",
							"        pm.execution.setNextRequest(\"Add_Book\");\r",
							"        }\r",
							"        else {\r",
							"    pm.execution.setNextRequest(null);\r",
							"        //Postman.pm.execution.setNextRequest(\"Add_Book\");\r",
							"        // Postman.setNextRequest(\"Add_Book\");\r",
							"    }\r",
							"}});   "
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
