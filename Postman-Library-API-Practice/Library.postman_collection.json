		{
			"name": "Search_Book",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//To capture the JSON resonse into a Variable\r",
							"const searchBookResponse = pm.response.json();\r",
							"\r",
							"//To store the Schema to be validated into an Variable\r",
							"const searchBookSchema = {\r",
							"    \"type\": \"array\",\r",
							"    \"items\": [\r",
							"        {\r",
							"            \"type\": \"object\",\r",
							"            \"properties\": {\r",
							"                \"book_name\": {\r",
							"                    \"type\": \"string\"\r",
							"                },\r",
							"                \"isbn\": {\r",
							"                    \"type\": \"string\"\r",
							"                },\r",
							"                \"aisle\": {\r",
							"                    \"type\": \"string\"\r",
							"                },\r",
							"                \"author\": {\r",
							"                    \"type\": \"string\"\r",
							"                }\r",
							"            },\r",
							"            \"required\": [\r",
							"                \"book_name\",\r",
							"                \"isbn\",\r",
							"                \"aisle\",\r",
							"                \"author\"\r",
							"            ]\r",
							"        }\r",
							"    ]\r",
							"};\r",
							"\r",
							"//Tests to Validate the JSON Response Logic\r",
							"pm.test(\"Validate the JSON Response Logic\", function () {\r",
							"    //To Print the Variable Value  \r",
							"    console.log(searchBookResponse);\r",
							"\r",
							"    //To compare the respnse of Author value from Search Book Respnse with Add Book Response\r",
							"    pm.expect(searchBookResponse[0].author).to.eql(pm.collectionVariables.get(\"author_name\"));\r",
							"\r",
							"    //To compare the respnse of ISBn value from Search Book Respnse with Add Book Response\r",
							"    pm.expect(searchBookResponse[0].isbn).to.eql(pm.collectionVariables.get(\"isbn\"));\r",
							"\r",
							"}\r",
							");\r",
							"\r",
							"//Tests to Validate the JSON Response Schema\r",
							"//Fork Test\r",
							"pm.test(\"Validate the JSON Response Status Code & Schema\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"    pm.response.to.have.jsonSchema(searchBookSchema);\r",
							"\r",
							"});    "
						],
						"type": "text/javascript",
						"packages": {}
					}
